{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "strict": true,
        "moduleResolution": "node",
        "types": [
            "mocha",
            "node"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": [
        "src/**/*"
    ]
}